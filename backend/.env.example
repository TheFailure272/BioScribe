# ============================================================================
# BioScribe AI - Environment Configuration Template
# Copy this file to .env and update with your actual values
# ============================================================================

# Application
ENVIRONMENT=development
DEBUG=True
APP_NAME="BioScribe AI"
APP_VERSION="2.0.0"

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True
WORKERS=4

# Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=bioscribe_ai
MONGODB_MAX_POOL_SIZE=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_DB=0
CACHE_TTL=3600

# AI Models
HUGGINGFACE_CACHE_DIR=./models/cache
MODEL_DEVICE=cpu
MAX_SEQUENCE_LENGTH=1000
BATCH_SIZE=8

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/bioscribe.log

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=False

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://bioscribe-ai.vercel.app
